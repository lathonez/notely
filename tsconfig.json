{
  "compilerOptions": {
    "target": "es5",
    "noImplicitAny": false,
    "removeComments": true,
    "sourceMap": true,
    "module": "commonjs",
    "experimentalDecorators": false,
    "outDir": "/builds/",
    "lib": ["es6", "dom"]
  },
  "exclude": [
    "node_modules",
    "builds",
    "dist",
    "generator-templates"
  ],
  "filesGlob": [
    "./src/**/*.ts",
    "!./src/**/*.spec.ts",
    "!./node_modules/**/*.ts",
    "src/custom_typings.d.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}
